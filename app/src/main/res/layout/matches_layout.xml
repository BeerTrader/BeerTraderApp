<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/matches_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <TextView
        android:id="@+id/matches_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matches Page"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offerer"
        android:id="@+id/offerer"
        android:layout_below="@+id/matches_page"
        android:layout_alignEnd="@+id/matches_page"
        android:layout_alignStart="@+id/matches_page" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/acceptBtn"
        android:layout_below="@+id/offerer"
        android:layout_alignParentStart="true"
        android:layout_marginTop="126dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REJECT"
        android:id="@+id/rejectBtn"
        android:layout_alignBottom="@+id/acceptBtn"
        android:layout_alignParentEnd="true" />

</RelativeLayout>