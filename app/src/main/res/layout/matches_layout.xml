<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="#ffffffff">

    <TextView
        android:id="@+id/matches_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/matches_page_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <com.jim.demo1.lorentzos.SwipeFlingAdapterView
        android:id="@+id/frame"
        android:background="#eefeeb29"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".matches_activity" />


    <include layout="@layout/match_buttons" />

</merge>