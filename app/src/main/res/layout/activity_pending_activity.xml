<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jim.demo1.Matches.pending_activity"
    android:background="#ffffffff">

    <TextView
        android:id="@+id/pending_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending Matches"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffffff"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offerer"
        android:id="@+id/offerer"
        android:layout_below="@+id/pending_page"
        android:layout_alignEnd="@+id/pending_page"
        android:layout_alignStart="@+id/pending_page"
        android:textColor="#ff000000"
        android:background="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/acceptBtn"
        android:layout_below="@+id/offerer"
        android:layout_alignParentStart="true"
        android:layout_marginTop="126dp"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        style="@android:style/DeviceDefault.SegmentedButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REJECT"
        android:id="@+id/rejectBtn"
        android:layout_alignBottom="@+id/acceptBtn"
        android:layout_alignParentEnd="true"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        style="@android:style/DeviceDefault.SegmentedButton"/>

</RelativeLayout>
