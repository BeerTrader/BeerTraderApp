<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:weightSum="1"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search Page"
        android:id="@+id/searchPage"
        android:layout_gravity="center_horizontal" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:id="@+id/AutoCompleteTextViewType"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_weight="0.17" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Brewery"
        android:id="@+id/AutoCompleteTextViewBrewery"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_weight="0.17" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Beer Name"
        android:id="@+id/AutoCompleteTextViewBeerName"
        android:layout_weight="0.17" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distance"
        android:id="@+id/AutoCompleteTextViewDistance"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.17" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/find"
        android:background="#ffffffff" />




</LinearLayout>